<UserControl x:Class="Client.Wpf.Controls.GameModeSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid x:Name="_buttonGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <local:DropCapButton
                    Grid.Column="0"
                    x:Name="_arcadeButton"
                    Caption ="Arcade"
                    DropCapFontSize="16"/>
        <local:DropCapButton
                    Grid.Column="1"
                    x:Name="_realisticButton"
                    Caption ="Realistic"
                    DropCapFontSize="16"/>
        <local:DropCapButton
                    Grid.Column="2"
                    x:Name="_simulatorButton"
                    Caption ="Simulator"
                    DropCapFontSize="16"/>

    </Grid>
</UserControl>
