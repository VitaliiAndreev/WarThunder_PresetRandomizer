<UserControl
    x:Class="Client.Wpf.Controls.ResearchTreeCellVehicleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        x:Name="_border"
        Style="{StaticResource ResearchTreeCell}"
        MouseEnter="OnMouseEnter"
        MouseLeave="OnMouseLeave"
        MouseDown="OnClick"
        ToolTipOpening="OnTooltipOpening">

        <Grid
            x:Name="_innerGrid">
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" HorizontalAlignment="Right">
                
                <TextBlock Text="Vehicle Name"
                    x:Name="_name"
                    Style="{StaticResource VehicleCard}"/>
                <Image
                    x:Name="_countryFlag"
                    Style="{StaticResource FlagIcon}"/>

            </WrapPanel>
            
            <WrapPanel Grid.Row="1" HorizontalAlignment="Right">

                <TextBlock Text="--.- / -"
                    x:Name="_informationTextBlock"
                    Style="{StaticResource VehicleCard}"/>

            </WrapPanel>

        </Grid>

        <Border.ToolTip>
            <StackPanel
                x:Name="_tooltipPanel"
                Margin="5">

                <TextBlock Text="Full Name"
                    x:Name="_tooltipFullName"
                    Style="{StaticResource TextBlockWithSkyQuakeHorizontallyCentered12px}"/>

                <TextBlock
                        x:Name="_tooltipClass"
                        Style="{StaticResource TextBlockWithSkyQuakeHorizontallyCentered12px}"/>


                <WrapPanel HorizontalAlignment="Center">

                    <Image
                        x:Name="_tooltipCountryFlag"
                        Style="{StaticResource FlagIcon}"/>
                    <TextBlock
                        x:Name="_tooltipCountryRankAndBattleRating"
                        Style="{StaticResource TextBlockWithSkyQuakeHorizontallyCentered12px}"/>
                    <TextBlock
                        x:Name="_tooltipBattleRating"
                        Style="{StaticResource TextBlockWithSkyQuakeHorizontallyCentered12px}"/>

                </WrapPanel>

                <Image
                    x:Name="_portrait"
                    Style="{StaticResource Image312x200px}"
                    Margin="0 5 0 5"/>

            </StackPanel>
        </Border.ToolTip>

    </Border>
</UserControl>