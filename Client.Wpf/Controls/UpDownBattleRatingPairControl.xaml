<UserControl
    x:Class="Client.Wpf.Controls.UpDownBattleRatingPairControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:Client.Wpf.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="84"
    d:DesignWidth="800">
    <Grid
        Height="84">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:UpDownBattleRatingControl
                Grid.Row="0"
                x:Name="_maximumUpDownControl"
                TextBlockHeight="20"
                ValueChanged="OnValueChanged"/>

        <controls:UpDownBattleRatingControl
                Grid.Row="1"
                x:Name="_minimumUpDownControl"
                TextBlockHeight="20"
                ValueChanged="OnValueChanged"/>

    </Grid>
</UserControl>
