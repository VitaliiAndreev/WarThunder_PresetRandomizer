    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="clr-namespace:Client.Wpf.Controls.Base" xmlns:controls="clr-namespace:Client.Wpf.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="200"
    d:DesignWidth="202">
    <Grid
        x:Name="_grid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:RepairCostControl
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Center"/>

    </Grid>
</base:LocalisedUserControl>