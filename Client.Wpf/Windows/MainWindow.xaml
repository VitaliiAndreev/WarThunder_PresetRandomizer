<local:BaseWindow x:Class="Client.Wpf.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Wpf.Windows"
        xmlns:controls="clr-namespace:Client.Wpf.Controls"
        mc:Ignorable="d"
        Title="Main Window"
        WindowStartupLocation="CenterScreen"
        MinHeight="400"
        MinWidth="1000"
        Height="600"
        Width="1200"
        Loaded="OnLoaded"
        Closed="OnClosed">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Button Content="Generate a preset"
                x:Name="_generatePresetButton"
                FontWeight="Bold"/>

            <controls:GameModeSelectionControl
                x:Name="_gameModeSelectionControl"
                Margin="0 10 0 0"/>

        </StackPanel>
        
        <Grid
            Grid.Column="1"
            Style="{StaticResource PaddedGrid}">

            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <controls:ResearchTreeControl
                Grid.Row="1"
                x:Name="_researchTreeControl"/>
            
        </Grid>

    </Grid>
</local:BaseWindow>
