<local:BaseWindow x:Class="Client.Wpf.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Wpf.Windows"
        xmlns:controls="clr-namespace:Client.Wpf.Controls"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Height="600"
        Width="1000"
        Loaded="OnLoaded"
        Closed="OnClosed">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <Button
                x:Name="_randomizeButton"
                FontWeight="Bold"
                Content="Randomize"/>

            <controls:GameModeSelectionControl Margin="0 10 0 0"/>

        </StackPanel>
        
        <StackPanel Grid.Column="1">

        </StackPanel>

    </Grid>
</local:BaseWindow>
